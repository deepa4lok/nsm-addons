<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_ad4all_config_form" model="ir.ui.view">
            <field name="name">ad4all.config.form</field>
            <field name="model">ad4all.config</field>
            <field name="arch" type="xml">
                <form string="Ad4all Config">
                    <sheet>
                        <group col="4">
                            <field name="host"/>
                        </group>
                        <group col="4">
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                    </sheet>
                </form>
            </field>
            </record>

        <record model="ir.ui.view" id="view_ad4all_config_tree">
            <field name="name">ad4all.config.tree</field>
            <field name="model">ad4all.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Ad4all Config">
                    <field name="username"/>
                    <field name="host"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ad4all_config">
            <field name="name">Ad4all Settings</field>
            <field name="res_model">ad4all.config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ad4all_config_tree"/>
        </record>


        <menuitem id="ad4all_config_menu"
            parent="menu_ad4all"
            action="action_ad4all_config"
            sequence="10" />

</odoo>